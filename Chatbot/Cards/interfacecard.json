{
    "contentType": "application/vnd.microsoft.card.adaptive",
    "content": {
        "type": "AdaptiveCard",
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "version": "1.2",
        "body": [
            {
                "type": "TextBlock",
                "text": "Create New Interface",
                "wrap": true,
                "size": "Large",
                "weight": "Bolder"
            },
            {
                "type": "TextBlock",
                "text": "Device Name",
                "wrap": true
            },
            {
                "type": "Input.Text",
                "placeholder": "r1",
                "id": "deviceName"
            },
            {
                "type": "TextBlock",
                "text": "Interface",
                "wrap": true
            },
            {
                "type": "Input.Text",
                "placeholder": "Loopback#",
                "id": "name"
            },
            {
                "type": "TextBlock",
                "text": "IP Address",
                "wrap": true
            },
            {
                "type": "Input.Text",
                "placeholder": "192.168.56.###",
                "id": "ip"
            },
            {
                "type": "TextBlock",
                "text": "Netmask:",
                "wrap": true
            },
            {
                "type": "Input.Text",
                "placeholder": "255.255.255.0",
                "id": "netmask"
            },
            {
                "type": "ActionSet",
                "actions": [
                    {
                        "type": "Action.Submit",
                        "title": "Submit",
                        "style": "positive",
                        "data": {
                            "callback_keyword": "new int"
                        }
                    }
                ]
            }
        ]
    }
}